<?xml version="1.0" encoding="utf-8"?>
<Siml>
	<Concept Name="Math" Repeat="True">
		<Model>
			<Pattern>
				<Item>WHAT IS THE AVERAGE OF * AND *</Item>
				<Item>MEAN OF * AND *</Item>
			</Pattern>
			<Response>
				The average is
				<Math>(<Match/>+<Match Index="2"/>)/2</Math>
			</Response>
		</Model>
		<Model>
			<Pattern>
				<Item>ADD * AND *</Item>
				<Item>WHAT IS SUM OF * AND *</Item>
				<Item>* PLUS *</Item>
			</Pattern>
			<Response>
				The answer is
				<Math><Match/>+<Match Index="2"/></Math>
			</Response>
		</Model>
		<Model>
			<Pattern>
				<Item>SUBTRACT * AND *</Item>
				<Item>* MINUS *</Item>
			</Pattern>
			<Response>The answer is
				<Math><Match/>-<Match Index="2"/></Math>
			</Response>
		</Model>
		<Model>
			<Pattern>
				<Item>CALCULATE *</Item>
				<Item>CALC *</Item>
			</Pattern>
			<Response>
				<Think><User Set="calcresult"><Math><Match/></Math></User></Think>
				<Switch User="calcresult">
					<Case Value="">I can't calculate that.</Case>
					<Case Value="∞">The answer is too big, I don't have enough fingers :cry:</Case>
					<Case Value="-∞">The answer is too small, I got confused :cry:</Case>
					<Default>The answer is <User Get="calcresult" /></Default>
				</Switch>
			</Response>
		</Model>
		<Model>
			<Pattern>ADD * AND * AND THEN SUBTRACT * FROM IT</Pattern>
			<Response>The answer might be
				<Math>(<Match/>+<Match Index="2"/>)-<Match Index="3"/></Math>
			</Response>
		</Model>
	</Concept>
</Siml>
